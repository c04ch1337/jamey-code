# Production Configuration for Digital Twin Jamey

# Project Configuration
PROJECT_NAME=jamey

# Database Configuration
POSTGRES_HOST=your_production_host
POSTGRES_PORT=5432
POSTGRES_DB=jamey_prod
POSTGRES_USER=jamey_prod
POSTGRES_PASSWORD=change_to_strong_password
POSTGRES_MAX_CONNECTIONS=20

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.85
VECTOR_INDEX_TYPE=hnsw  # More efficient for production
MAX_MEMORY_ENTRIES=100000
MEMORY_RETENTION_DAYS=90

# OpenRouter Configuration
OPENROUTER_API_KEY=your_production_api_key_here
OPENROUTER_DEFAULT_MODEL=claude-3-sonnet
OPENROUTER_ALLOWED_MODELS=claude-3-sonnet,gpt-4
OPENROUTER_TIMEOUT_SECONDS=30
OPENROUTER_MAX_RETRIES=5

# Runtime Configuration
LOG_LEVEL=info
ENABLE_REGISTRY_TOOL=false  # Disabled in production for security
BACKUP_DIR=/var/lib/jamey/backups
PROCESS_TOOL_ENABLED=true
PROCESS_TOOL_MAX_LIST=1000
SELF_MODIFY_BACKUP_COUNT=20

# Security Configuration
API_KEY_REQUIRED=true
API_KEY=change_to_strong_api_key
ALLOWED_ORIGINS=https://your-production-domain.com
ENABLE_CORS=false

# Production-specific Settings
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8081
MAX_REQUEST_SIZE_MB=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60
SSL_CERT_PATH=/etc/ssl/certs/jamey.crt
SSL_KEY_PATH=/etc/ssl/private/jamey.key