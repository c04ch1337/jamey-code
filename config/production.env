# Runtime Configuration
LOG_LEVEL=info
ENABLE_REGISTRY_TOOL=false  # Disabled in production for security
BACKUP_DIR=/var/lib/jamey/backups
PROCESS_TOOL_ENABLED=true
PROCESS_TOOL_MAX_LIST=1000
SELF_MODIFY_BACKUP_COUNT=20

# API Server Configuration
API_HOST=0.0.0.0
API_HTTP_PORT=3000
API_HTTPS_PORT=3443
API_ENABLE_HTTPS=true
API_REDIRECT_HTTP_TO_HTTPS=true
ALLOWED_ORIGINS=https://your-production-domain.com
ENABLE_CORS=false

# TLS/HTTPS Configuration
API_TLS_CERT_PATH=/etc/ssl/certs/jamey.crt
API_TLS_KEY_PATH=/etc/ssl/private/jamey.key
API_TLS_CA_CERT_PATH=/etc/ssl/certs/ca-bundle.crt
API_TLS_MIN_VERSION=1.3
API_ENABLE_HSTS=true
API_HSTS_MAX_AGE=31536000
API_HSTS_INCLUDE_SUBDOMAINS=true
API_HSTS_PRELOAD=false

# Metrics & Health Check
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8081

# Security Configuration
API_KEY_REQUIRED=true
API_KEY=change_to_strong_api_key
MAX_REQUEST_SIZE_MB=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60